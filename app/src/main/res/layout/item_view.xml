<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="film"
            type="com.example.starwars.model.Film" />
        <variable
            name="filmTitleFragment"
            type="com.example.starwars.ui.main.FilmTitleFragment" />
        <variable
            name="viewModel"
            type="com.example.starwars.ui.main.MainViewModel" />
    </data>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#302E2A"
        android:padding="16dp"
        android:scaleType="fitXY"
        android:text="@{film.title}"
        android:textAlignment="textStart"
        android:textColor="#F6F322"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:ignore="SpeakableTextPresentCheck"
        tools:text="BUTTON INFO" />
</layout>